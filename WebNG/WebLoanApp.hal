global
function Boolean NovitiMaskMatches(string pattern,string tstr)
begin
  string 255 c,c2;
  Integer i;
  Boolean res;
  
  if (len(pattern)==len(tstr)) then begin
    res = true;
    for (i=0;i<len(pattern);i=i+1) begin
      c = mid(pattern,i,1);
      c2 = mid(tstr,i,1);
      if (c!="#" and c!=c2) then begin
        res = false;
        i = len(pattern);
      end;
    end;
  end;

  NovitiMaskMatches = res;
  return;
end;

