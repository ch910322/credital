    WebOutString(" field-order='" & order & "'");
  end;

  WebOutString("><div class='loan_label'>" & label & "</div><div class='input'><select " & add & ">");
  WebOutString(ShowOption("",ph));
  while (GetNextSubstring(daystr,pos,",",tmp)) begin
    n = StringToInt(tmp);
    WebOutString(ShowOption(n,n));
  end;
  WebOutString("</select></div></div>");
  if (colcnt>0) then begin
    WebOutString("</div>");
  end;
  return;
end;

